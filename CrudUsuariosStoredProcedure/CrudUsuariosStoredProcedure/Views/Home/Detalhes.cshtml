@*fazer a referência com o Usuario, para as informações dos inputs serem passadas para o Usuario*@

@model Usuario

<div class="container">

    <h1>Detalhe de Usuário</h1>

    @*enviando as inforções la para o cadastrar pelo método post*@
    
        
        @*esse input não vai aparecer*@
        <input type="hidden" asp-for="Id" />
        @*colocando disabled para o usuario não poder alterar os dados no input*@
        <div class="mt-3">
            <label class="form-label">Nome:</label>
            <input type="text" class="form-control" asp-for="Nome" disabled />
        </div>

        <div class="mt-3">
            <label class="form-label">Sobrenome:</label>
            <input type="text" class="form-control" asp-for="Sobrenome" disabled />
        </div>

        <div class="mt-3">
            <label class="form-label">Email:</label>
            <input type="email" class="form-control" asp-for="Email" disabled />
        </div>

        <div class="mt-3">
            <label class="form-label">Cargo:</label>
            <input type="text" class="form-control" asp-for="Cargo" disabled  />
        </div>

        <div class="d-flex mt-5 g-2">
            
            <a asp-action="Index" class="btn btn-info w-50">Voltar</a>
        </div>

    

</div>
