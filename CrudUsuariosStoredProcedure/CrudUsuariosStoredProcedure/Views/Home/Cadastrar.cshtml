@*fazer a referência com o Usuario, para as informações dos inputs serem passadas para o Usuario*@

@model Usuario

@*Criadas no HomeController*@
@*se tiver uma mensagem dentro dessa caixa*@
@if (TempData["MensagemSucesso"] != null)
{
    <div class="alert alert-success text-dark" role="alert">
        @TempData["MensagemSucesso"]
    </div>
}

@*se tiver uma mensagem dentro dessa caixa*@
@if (TempData["MensagemErro"] != null)
{
    <div class="alert alert-success text-dark" role="danger">
        @TempData["MensagemErro"]
    </div>
}
@*div que vai mostrar os erros criados na Model Usuario*@
<div asp-validation-summary="All" class="text-danger"></div>
<div class="container">

    <h1>Registro de Usuários</h1>

    @*enviando as inforções la para o cadastrar pelo método post*@
    <form asp-action="Cadastrar" asp-controller="Home" method="post">

        <div class="mt-3">
            <label class="form-label">Nome:</label>
            <input type="text" class="form-control" asp-for="Nome"/>
        </div>

        <div class="mt-3">
            <label class="form-label">Sobrenome:</label>
            <input type="text" class="form-control" asp-for="Sobrenome" />
        </div>

        <div class="mt-3">
            <label class="form-label">Email:</label>
            <input type="email" class="form-control" asp-for="Email" />
        </div>

        <div class="mt-3">
            <label class="form-label">Cargo:</label>
            <input type="text" class="form-control" asp-for="Cargo" />
        </div>

        <div class="d-flex mt-5 g-2">
            <button type="submit" class="btn btn-success w-50 mx-2">Cadastrar</button>
            <a asp-action="Index" class="btn btn-info w-50">Voltar</a>
        </div>

    </form>

</div>
